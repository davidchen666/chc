        $.ajax({  
             url: '?m=events&a=uploadFile' ,  
             type: 'post',  
             data: formData,
             cache: false,
             processData: false,
             contentType: false,
             // async: false
        }).done(function(res) {
            sleep(1000);
            $('.upload-msg').hide();
            $('.msg').show();
        	res = $.parseJSON(res);
            console.log(res);
            if(res.resCode === 200){
            	$('.msg').html('上传成功。');
